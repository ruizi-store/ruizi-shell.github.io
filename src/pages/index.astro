    justify-content: center;
    align-items: center;
  }

  .os-icon svg {
    width: 56px;
    height: 56px;
  }

  .download-card h3 {
    font-size: 24px;
    margin-bottom: 8px;
  }

  .download-card p {
    color: var(--text-muted);
    margin-bottom: 20px;
  }

  .download-btn {
    display: inline-block;
    background: var(--primary);
    color: white;
    padding: 10px 24px;
    border-radius: 8px;
    font-weight: 500;
  }

  .download-note {
    text-align: center;
    color: var(--text-muted);
  }

  .download-note a {
    color: var(--primary);
  }

