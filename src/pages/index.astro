  .feature-icon {
    font-size: 48px;
    margin-bottom: 16px;
  }

  .feature-card h3 {
    font-size: 20px;
    margin-bottom: 12px;
  }

  .feature-card p {
    color: var(--text-muted);
    font-size: 15px;
  }

